
<div class="container">
  <div class="row">
    <div class="col offset-md-3 col-md-6">
      <div class="card w-auto" style="width: 18rem;">
        <div class="card-header d-flex align-items-center">
          <h6>All boards</h6>
          <!-- Modal -->
          <button type="button" class="ms-auto btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#newBoardModal">
            Add a new board
          </button>
          <div class="modal fade" id="newBoardModal" tabindex="-1" aria-labelledby="newModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="newModalLabel">New board</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form action="/insert_board" method="post">
                    <div class = "d-flex flex-column">
                      <div class="mb-3">
                        <label class="form-label" for="name_box">
                          Name
                        </label>

                        <input type="text" id="name_box" name="query_name" class="form-control" >
                      </div>
                      <button class="btn btn-success">
                        Add board
                      </button>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class = "card-body p-0">
        <ul class="list-group list-group-flush">
          <% @list_of_boards.each do |a_board| %>
            <a class="d-flex list-group-item list-group-item-action" href="/boards/<%= a_board.id %>">
              <%= a_board.name %>
              <div class="ms-auto">
                <i class="fa-solid fa-chevron-right"></i>
              </div>
            </a>
          <% end %>
        </ul>
        </div>
      </div>
    </div>
  </div>
</div>
